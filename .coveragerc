[run]
branch = True
source = src
omit =
    */__init__.py
    */tests/*
    */venv/*
    src/cli/*
    src/api/*
    src/client/*
    src/devtools/*
    src/embeddings/hierarchical_embedding_service.py
    src/retrieval/query_enhancer.py
    src/retrieval/reranker.py
    src/utils/*
    scripts/*
    test_*.py
    src/retrieval/*
    src/graphrag/*
    src/vectordb/hybrid_qdrant_store.py
    src/embedding/*
    src/embeddings/sparse_vector_service.py
    src/graphdb/*
    src/models/api_model_router.py
    src/chunking/language_aware_chunker.py
    src/augmentation/unified_prompt_system.py
    src/augmentation/dynamic_prompt_system.py
    src/cache/*

[report]
exclude_lines =
    # pragma: no cover
    if __name__ == .__main__.:  # alias pattern will be recognized by coverage
fail_under = 20 